{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Registro</h5>
                        <div class="form-signin" onsubmit="return validform()">
                            {{ form_start(form) }}

                            <div>
                                {{ form_label(form.email) }}<br>
                                {{ form_widget(form.email, {'attr': {'required': 'required'}}) }}<br>
                                {{ form_errors(form.email) }}
                            </div>

                            <div>
                                {{ form_widget(form.plainPassword, {'attr': {'required': 'required'}}) }}<br>
                                {{ form_errors(form.plainPassword) }}
                            </div>

                            <div>
                                {{ form_label(form.nombre) }}<br>
                                {{ form_widget(form.nombre, {'attr': {'required': 'required'}}) }}<br>
                                {{ form_errors(form.nombre) }}
                            </div>

                            <div>
                                {{ form_label(form.apellido_1) }}<br>
                                {{ form_widget(form.apellido_1, {'attr': {'required': 'required'}}) }}<br>
                                {{ form_errors(form.apellido_1) }}
                            </div>

                            <div>
                                {{ form_label(form.apellido_2) }}<br>
                                {{ form_widget(form.apellido_2, {'attr': {'required': 'required'}}) }}<br>
                                {{ form_errors(form.apellido_2) }}
                            </div>

                            <div>
                                {{ form_label(form.usuario) }}<br>
                                {{ form_widget(form.usuario, {'attr': {'required': 'required'}}) }}<br>
                                {{ form_errors(form.usuario) }}
                            </div>

                            <div>
                                {{ form_label(form.telefono) }}<br>
                                {{ form_widget(form.telefono) }}<br>
                                {{ form_errors(form.telefono) }}
                            </div>
                            <br>
                            <br>

                            <div class="btn btn-lg btn-primary btn-block text-uppercase">
                                {{ form_widget(form.enviar) }}
                            </div>

                            <div class="custom-control mb-3" style="padding-top: 1rem; padding-left: 0">
                                Ya tengo cuenta. <a href="{{ path('login') }}">Entrar</a>
                            </div>

                            <hr class="my-4">
                            <button class="btn btn-lg btn-google btn-block text-uppercase" type="button"><i
                                        class="fab fa-google mr-2"></i> Entrar con Google
                            </button>
                            <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="button"><i
                                        class="fab fa-facebook-f mr-2"></i> Entrar con Facebook
                            </button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <link href="{{ asset('//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css') }}" rel="stylesheet" id="bootstrap-css">
    <script src="{{ asset('//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js') }}"></script>
    <script src="{{ asset('https://code.jquery.com/jquery-3.3.1.slim.min.js') }}"></script>
    <script src="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js') }}"></script>
    <script src="{{ asset('https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/register.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="dns-prefetch" href="{{ asset('https://fonts.gstatic.com') }}">
    <link href="{{ asset('https://fonts.googleapis.com/css?family=Raleway:300,400,600') }}" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
